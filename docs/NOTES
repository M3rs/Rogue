Camera:
	int screenX, screenY
	screenX = object.x - camera.x;
	screenY = object.y - camera.y;




struct Vec2i x,y

Rect x,y,w,h
{
	Vec2i getCenter()
}

rectCheckMethod(Rect r1, Rect r2){

	center 1
	center 2 
	
	Vec2i dir;

	if center1.x < center2.x:	dir.x = -1
	elif center 1.x > center2.x:	dir.x = 1
	elif center 1.x = center2.x:	dir.x = 0
	else -- error

	if center1.y < center2.y:	dir.y = -1
	elif center1.y > center2.y:	dir.y = 1
	elif center2.y = center2.y:	dir.y = 0
	else -- error

	

}

